<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PatientInfoActivity">

    <TextView
        android:id="@+id/head"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Please Provide This Additional Accurate Information \nto Get Most Accurate Results"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_below="@id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Please Enter Your Age:"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_Age"
        android:layout_margin="20dp"
        android:text="Please Enter Your Height:"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_height"


        android:layout_margin="20dp"
        android:text="Please Enter Your Weight:"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_weight"

        android:layout_margin="20dp"
        android:text="Please Enter Your Gender:"
        android:textColor="#000000"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/et_Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_age"
        android:layout_marginLeft="20dp"
        android:hint="Age" />

    <EditText
        android:id="@+id/et_height"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@id/tv_height"
        android:layout_marginLeft="20dp"
        android:hint="Height (cm)" />

    <EditText
        android:id="@+id/et_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/tv_weight"
        android:layout_marginLeft="20dp"
        android:hint="Weight (kg)" />

    <EditText
        android:id="@+id/et_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_gender"
        android:layout_marginLeft="20dp"
        android:hint="Gender (M/F)" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_below="@id/et_gender"
        android:background="@color/colorPrimaryDark"
        android:text="SUBMIT"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>