<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="Change the port number"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue_menu_button"/>

    <EditText
        android:id="@+id/port_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:gravity="center"
        android:inputType="number"
        android:digits="0123456789"
        android:hint="Port number"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/port_dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:textColor="@color/blue_menu_button"
            android:layout_margin="1dp"
            android:background="@drawable/btn_accent_selector"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/port_dialog_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_accent_selector"
            android:textColor="@color/blue_menu_button"
            android:layout_margin="1dp"
            android:text="Save"
            android:layout_weight="1"/>

    </LinearLayout>


</LinearLayout>