<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.apps.kunalfarmah.Spo2Watcher">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.flash" />

    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="com.apps.kunalfarmah.Spo2Watcher.Android_wifi.app.TofahaApplication"
        android:allowBackup="true"
        android:icon="@drawable/report_icon"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/report_icon"
        android:supportsRtl="true"
        android:forceDarkAllowed="false"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="q">
        <activity android:name=".HelpActivity"></activity>
        <activity android:name=".MyReportsActivity" />
        <activity
            android:name=".MyAppointmentsActivity"
            android:label="My Appointments" />
        <activity
            android:name=".UserAppointments"
            android:label="My Appointments" />
        <activity
            android:name=".TakeAppointmentForm"
            android:label="Book Appointment" />
        <activity
            android:name=".MyChatsActivity"
            android:label="Chat" />
        <activity
            android:name=".PatientInfoActivity"
            android:label="Patient Info" />
        <activity
            android:name=".DoctorActivity"
            android:label="@string/title_activity_doctor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".VitalSignsActivity"
            android:label="Measure Vital signs" />
        <activity
            android:name=".AboutVitalSigns"
            android:label="About Vital signs" />
        <activity
            android:name=".ConsultActivity"
            android:label="Consult a Doctor" />
        <activity
            android:name=".MonitoringInstructions"
            android:label="Measure Vital signs" />
        <activity
            android:name=".RecordVitalSigns"
            android:label="Vital Signs Wizard" />
        <activity
            android:name=".VitalSignsResults"
            android:launchMode = "singleInstance"
            android:label="Results" />
        <activity
            android:name=".SettingsActivity"
            android:label="Settings" />
        <activity android:name=".Android_wifi.ui.main.WifiActivity"/>
        <activity android:name=".Android_wifi.ui.InfoActivity"/>
        <activity android:name=".tempActivity" />
        <activity android:name=".InfoActivity" />
        <activity android:name=".RemedyActivity" />
        <activity android:name=".checksum" />
        <activity android:name=".ChatRoomActivity" />
        <activity
            android:name="com.paytm.pgsdk.PaytmPGActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"
            android:screenOrientation="portrait" />
        <activity android:name=".DoctorForm" />
    </application>

</manifest>